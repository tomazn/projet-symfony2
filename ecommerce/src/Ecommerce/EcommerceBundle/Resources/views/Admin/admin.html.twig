        {{ render(controller("EcommerceEcommerceBundle:Admin:ProduitEditForm"))}}
    </div>
      <div role="tabpanel" class="tab-pane" id="categorie">
        {{ render(controller("EcommerceEcommerceBundle:Admin:CategorieAddForm"))}}
